<div class="container p-4">
    <div class="row justify-content-center">
        <h1>Editar Carrera</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-4">
            <form method="POST" action="/carreras/editarCarrera/{{carrera.idcarrera}}">
                <div class="form-group">
                    <input type="text" class="form-control" name="carrera" value="{{carrera.carrera}}" placeholder="Nombre de la carrera" required/>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>
